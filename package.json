{
    "name": "dental-clinic-monorepo",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev:client": "cd client && npm run dev",
        "dev:server": "cd server && npm run start:dev",
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" --names \"SERVER,CLIENT\" --prefix-colors \"blue,green\"",
        "install:all": "cd client && npm install && cd ../server && npm install"
    },
    "devDependencies": {
        "@prisma/client": "5.22",
        "@types/node": "^25.2.1",
        "concurrently": "^8.2.0",
        "dotenv": "^17.2.4",
        "prisma": "5.22",
        "tsx": "^4.21.0"
    }
}
